        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDfZqh26pI_C5uHP7OIY2BFFwZngAXJ51Q" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="4030500" />

