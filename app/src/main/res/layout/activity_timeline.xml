<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="#ffffff"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context="cinemetroproject.cinemetro.LinesActivity">

    <TextView

        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textColor="#fbf7f7"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="lalalalla"
        android:gravity="center_horizontal"
        android:background="#1B9344"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/scrollView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp"
                android:paddingRight="0dp"
                android:paddingTop="35dp"
                android:weightSum="1">

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/radiogroup"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                </RadioGroup>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="fill_parent"
                    android:layout_height="250dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/mylayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/scrollView"
                android:orientation="horizontal"
                android:weightSum="1">




                <TextView
                    android:id="@+id/description"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="lalallaala"
                    android:background="#1B9344"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />




            </LinearLayout>



            <!-- show In Map-->
            <ImageButton
                android:id="@+id/showInMap"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/show_in_map" />

            <!-- Go button -->
            <Button
                android:id="@+id/go_ahead_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_background"
                android:orientation="horizontal"
                android:text="@string/go"
                android:textAlignment="center"
                android:textColor="@color/letter_colour" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <!-- Facebook button -->
                    <Button
                        android:id="@+id/facebook_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/button_share"
                        android:text="f"
                        android:textColor="@color/share_button"
                        android:textStyle="italic" />

                    <!-- Twitter button -->
                    <Button
                        android:id="@+id/twitter_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_share"
                        android:text="t"
                        android:textColor="@color/share_button"
                        android:textStyle="italic" />

                    <!-- Instagram button -->
                    <Button
                        android:id="@+id/instagram_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_share"
                        android:text="i"
                        android:textColor="@color/share_button"
                        android:textStyle="italic" />

                    <!-- Pinterest button -->
                    <Button
                        android:id="@+id/pinterest_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_share"
                        android:text="Pin"
                        android:textColor="@color/share_button"
                        android:textStyle="italic" />

                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>