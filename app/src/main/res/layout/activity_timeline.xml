<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#ffffff"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"

    tools:context="cinemetroproject.cinemetro.LinesActivity">

    <TextView

        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:textColor="#fbf7f7"
        android:textSize="25dp"
        android:textStyle="italic"
        android:text="lalalalla"

        android:gravity="center_horizontal"
        android:background="#115533"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/general_layout2"
        android:background="#115533"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:id="@+id/scrollView3">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/general_layout"
                android:background="#115533"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title">




                <LinearLayout
                    android:id="@+id/scrollView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="0dp"
                    android:paddingTop="5dp"
                    android:weightSum="1">

                    <View
                        android:layout_width="5dp"
                        android:layout_height="235dp"
                        android:layout_marginLeft="10dp"
                        android:background="#FFFFFF"/>
                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/radiogroup"
                        android:layout_width="90dp"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                    </RadioGroup>

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="fill_parent"
                        android:layout_height="250dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/mylayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/scrollView"
                    android:orientation="horizontal"
                    android:weightSum="1">




                    <TextView
                        android:id="@+id/description"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="lalallaala"
                        android:layout_marginTop="25dp"
                        android:background="#115533"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />




                </LinearLayout>



                <!-- show In Map-->



                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:background= "#115533"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/facebook_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textStyle="italic"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/facebook"
                        android:textColor="@color/share_button" />
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:textAlignment="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/star_off"
                        android:textColor="@color/letter_colour"
                        android:id="@+id/go_ahead"/>


                    <!-- Twitter button -->

                    <Button
                        android:id="@+id/twitter_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:textStyle="italic"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/twitter"
                        android:textColor="@color/share_button" />

                    <ImageButton
                        android:layout_height="40dp"
                        android:layout_width="45dp"
                        android:background="@drawable/map"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/showInMap"
                        />
                    <!-- Instagram button -->
                    <Button
                        android:id="@+id/instagram_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:textStyle="italic"
                        android:background="@drawable/instagram"
                        android:textColor="@color/share_button" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:layout_gravity="right"
                        android:textAlignment="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/share"
                        android:textColor="@color/letter_colour"
                        android:id="@+id/share"/>



                    <!-- Pinterest button -->
                    <Button
                        android:id="@+id/pinterest_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="italic"
                        android:background="@drawable/pinterest"
                        android:textColor="@color/share_button"/>



                </LinearLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>