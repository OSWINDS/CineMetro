<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- title, year -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:textStyle="italic"
                android:id="@+id/titleYear" />

            <!--movie Images -->
            <android.support.v4.view.ViewPager
                android:id="@+id/pagerImage"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <android.support.v4.view.PagerTabStrip
                    android:id="@+id/pager_title_strip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="#33b5e5"
                    android:textColor="#fff"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </android.support.v4.view.ViewPager>

            <!-- director -->
            <TextView
                android:text="\n\n Σκηνοθεσία \n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:id="@+id/director" />

            <!-- director Image -->
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/directorImage" />

            <!-- director Name-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/directorName" />

            <!-- cast -->
            <TextView
                android:text="\n\n Πρωταγωνιστούν \n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:id="@+id/cast" />

            <!-- images of cast -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/actorsHsw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>

            <!-- info -->
            <TextView
                android:text="\n\n Πληροφορίες \n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:id="@+id/inf" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info" />

            <!-- show In Map-->
            <ImageButton
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:background="@drawable/show_in_map"
                android:layout_gravity="center_horizontal"
                android:id="@+id/showInMap"
                />

            <!-- Go button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go"
                android:layout_gravity="right"
                android:textAlignment="center"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_background"
                android:textColor="@color/letter_colour"
                android:id="@+id/go_ahead_button"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <!-- Facebook button -->
                    <Button
                        android:id="@+id/facebook_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="f"
                        android:textStyle="italic"
                        android:background="@drawable/button_share"
                        android:textColor="@color/share_button"/>

                    <!-- Twitter button -->
                    <Button
                        android:id="@+id/twitter_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:text="t"
                        android:textStyle="italic"
                        android:background="@drawable/button_share"
                        android:textColor="@color/share_button"/>

                    <!-- Instagram button -->
                    <Button
                        android:id="@+id/instagram_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:text="i"
                        android:textStyle="italic"
                        android:background="@drawable/button_share"
                        android:textColor="@color/share_button" />

                    <!-- Pinterest button -->
                    <Button
                        android:id="@+id/pinterest_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:text="Pin"
                        android:textStyle="italic"
                        android:background="@drawable/button_share"
                        android:textColor="@color/share_button"/>

                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
