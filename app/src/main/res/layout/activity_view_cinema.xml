<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/line1"
    android:orientation="vertical" >

    <!-- scrollview total-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <!-- linearlayout total-->
        <LinearLayout
            android:id="@+id/general_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="1">

            <!-- name of station-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:textColor="@color/letters"
                android:textStyle="italic"
                android:id="@+id/name" />

            <!-- images Flipper-->
            <ViewFlipper
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:id="@+id/vf"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"/>


            <!-- info -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textColor="@color/letters"
                android:typeface="sans"
                android:textSize="18dp"/>

            <!-- buttons layout-->

            <HorizontalScrollView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                >
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <!-- facebook button-->
                <Button
                    android:id="@+id/facebook_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/facebook"
                   />

                <!-- rating button-->
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:textAlignment="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/star_off"
                    android:id="@+id/go_ahead"/>


                <!-- Twitter button -->
                <Button
                    android:id="@+id/twitter_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/twitter"
                    />

                <!-- view in map button-->
                <ImageButton
                    android:layout_height="40dp"
                    android:layout_width="45dp"
                    android:background="@drawable/map"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/showInMap"
                    />

                <!-- Instagram button -->
                <Button
                    android:id="@+id/instagram_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:textStyle="italic"
                    android:background="@drawable/instagram"
                    />

                <!-- share button-->
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:textAlignment="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/share"
                    android:id="@+id/share"/>

                <!-- Pinterest button -->
                <Button
                    android:id="@+id/pinterest_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="italic"
                    android:background="@drawable/pinterest"
                  />


            </LinearLayout>
            </HorizontalScrollView>

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="25dp"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
