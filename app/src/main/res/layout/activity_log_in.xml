<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cinemetroproject.cinemetro.LogIn">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="E-mail:"
        android:textSize="30dp"
        android:layout_toStartOf="@+id/SignUp_button"
        android:layout_toLeftOf="@+id/SignUp_button" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:text=""
        android:layout_alignRight="@+id/textView_pass" />

    <TextView
        android:id="@+id/textView_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userName"
        android:layout_marginTop="20dp"
        android:text="Password:"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/passWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_pass"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:text="" />

    <Button
        android:id="@+id/logIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_above="@+id/information"
        android:layout_alignRight="@+id/information"
        android:layout_alignEnd="@+id/information" />

    <TextView
        android:id="@+id/succesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/logIn"
        android:layout_alignParentStart="true"
        android:layout_below="@id/passWord"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/logIn"
        android:layout_toStartOf="@+id/logIn"
        android:text="this is where any problem will be displayed, or any success"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/succesText"
        android:layout_marginTop="50dp"
        android:text="this is where the new achivments(not database udpated) will be dispayed"
        android:textSize="25dp" />

    <Button
        android:id="@+id/SignUp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/userName" />


</RelativeLayout>
