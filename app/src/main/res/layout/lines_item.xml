<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:background="#ffffff"
    android:id="@+id/relative_layout_item"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/thumbnail"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_layout_item"
        >


        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Station"
            android:id="@+id/station_number"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_marginTop="16dp"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/star"
            android:id="@+id/pointsImage"
            android:layout_alignRight="@id/station_number"
            android:layout_marginRight="60dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:id="@+id/station_title"
            android:layout_below="@+id/station_number"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal" />



    </RelativeLayout>
</LinearLayout>